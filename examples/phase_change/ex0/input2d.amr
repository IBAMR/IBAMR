// Simulation Parameters
SOLVER_TYPE          = "STAGGERED"
DISCRETIZATION_FORM  = "CONSERVATIVE"
START_TIME           =   0.0e0     // initial simulation time
END_TIME             =   10.0e0   // final simulation time
GROW_DT              =   2.0e0     // growth factor for timesteps
MAX_INTEGRATOR_STEPS =   50000000  // max number of simulation timesteps
REGRID_INTERVAL      =   5
CFL_MAX              =   0.5
NUM_INS_CYCLES       =   1
CONVECTIVE_FORM      = "CONSERVATIVE"                // how to compute the convective terms
INIT_CONVECTIVE_TS_TYPE = "MIDPOINT_RULE"
CONVECTIVE_TS_TYPE = "MIDPOINT_RULE"    // convective time stepping type
NON_CONSERVATIVE_CONVECTIVE_OP_TYPE = "CUI"
TAG_BUFFER           = 2                          // size of tag buffer used by grid generation algorithm
DT_MAX               = 1e-3
ENABLE_LOGGING       = TRUE
SOLVE_MASS_CONSERVATION = FALSE


// AdvDiff solver parameters
ADV_DIFF_SOLVER_TYPE        = "SEMI_IMPLICIT"   // the advection-diffusion solver to use
ADV_DIFF_NUM_CYCLES         = 2                // number of cycles of fixed-point iteration
ADV_DIFF_CONVECTIVE_TS_TYPE = "MIDPOINT_RULE" // convective time stepping type
ADV_DIFF_CONVECTIVE_OP_TYPE = "CUI"             // convective differencing discretization type
ADV_DIFF_CONVECTIVE_FORM    = "CONSERVATIVE"       // how to compute the convective terms

TEMPERATURE_CONVECTIVE_TS_TYPE = "MIDPOINT_RULE" // "FORWARD_EULER" // convective time stepping type
TEMPERATURE_CONVECTIVE_OP_TYPE = "CUI"             // convective differencing discretization type
TEMPERATURE_CONVECTIVE_FORM    = "CONSERVATIVE"       // how to compute the convective terms
TEMPERATURE_DIFFUSION_TS_TYPE  = "TRAPEZOIDAL_RULE"       // how to compute the convective terms
K_VC_INTERPOLATION_TYPE        = "VC_HARMONIC_INTERP"

EnthalpyHierarchyIntegrator {
   start_time                      = START_TIME
   end_time                        = END_TIME
   grow_dt                         = GROW_DT
   num_cycles                      = ADV_DIFF_NUM_CYCLES
   convective_time_stepping_type   = ADV_DIFF_CONVECTIVE_TS_TYPE
   convective_op_type              = ADV_DIFF_CONVECTIVE_OP_TYPE
   convective_difference_form      = ADV_DIFF_CONVECTIVE_FORM
   T_diffusion_time_stepping_type  = TEMPERATURE_DIFFUSION_TS_TYPE
   T_convective_time_stepping_type = TEMPERATURE_CONVECTIVE_TS_TYPE
   T_convective_op_type            = TEMPERATURE_CONVECTIVE_OP_TYPE
   T_convective_difference_form    = TEMPERATURE_CONVECTIVE_FORM
   cfl                             = CFL_MAX
   dt_max                          = DT_MAX
   tag_buffer                      = TAG_BUFFER
   enable_logging                  = ENABLE_LOGGING
   max_integrator_steps            = MAX_INTEGRATOR_STEPS
   regrid_interval                 = REGRID_INTERVAL
   latent_heat                     = LATENT_HEAT
   rho_liquid                      = RHO_L
   rho_solid                       = RHO_S
   Cp_liquid                       = CP_L
   Cp_solid                        = CP_S
   Cp_gas                          = CP_L // there is no gas region in this example. So this won't be used.
   T_melt                          = MELT_TEMPERATURE
   solve_mass_conservation         = SOLVE_MASS_CONSERVATION
   k_vc_interpolation_type         = K_VC_INTERPOLATION_TYPE
   liquidus_temperature            = LIQUIDUS_TEMPERATURE
   solidus_temperature             = SOLIDUS_TEMPERATURE
   reference_temperature           = REFERENCE_TEMPERATURE
   output_temp_k                   = TRUE

      T_solver_type = "PETSC_KRYLOV_SOLVER"
      T_precond_type = "POINT_RELAXATION_FAC_PRECONDITIONER"
      T_solver_db
      {
        ksp_type             = "fgmres"
        rel_residual_tol     = 1.0e-12
        max_iterations       = 1000
      }

      T_precond_db
      {
          num_pre_sweeps  = 0
          num_post_sweeps = 3
          prolongation_method = "LINEAR_REFINE"
          restriction_method  = "CONSERVATIVE_COARSEN"
          coarse_solver_type = "PETSC_LEVEL_SOLVER"
          coarse_solver_rel_residual_tol = 1.0e-12
          coarse_solver_abs_residual_tol = 1.0e-50
          coarse_solver_max_iterations = 100
          coarse_solver_db {
             ksp_type = "gmres"
             pc_type = "jacobi"
          }
      }
}

