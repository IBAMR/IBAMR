// =============================================================================
// 4-FISH RECTANGULAR SCHOOL SIMULATION (FOLLOWING OFFICIAL EXAMPLE)
// =============================================================================
// Configuration: Rectangle (in-phase) formation
//   dx = 1.5L (axial spacing, HEAD-to-HEAD)
//   dy = 0.4L (lateral spacing, centerline-to-centerline)
//   Small moving control volumes (±1L like official example)
//   Each CV tracks its own fish independently
// =============================================================================

// Physical parameters
Re = 5609.0
MU = 0.785/Re
RHO = 1.0

// Odor transport parameters
KAPPA = 1.0e-3  // Diffusion coefficient (molecular diffusivity)
SCHMIDT = MU / (RHO * KAPPA)  // Schmidt number Sc = nu/D

// Grid spacing parameters
MAX_LEVELS = 3
REF_RATIO  = 4
N = 64 // Number of grid points in the x-direction

// Solver parameters
DELTA_FUNCTION       = "IB_4"
START_TIME           = 0.0e0
END_TIME             = 30.0
MAX_INTEGRATOR_STEPS = 10000000000000
GROW_DT              = 2.0e0
NUM_CYCLES           = 1
CONVECTIVE_OP_TYPE   = "PPM"
CONVECTIVE_FORM      = "CONSERVATIVE"
NORMALIZE_PRESSURE   = TRUE
CFL_MAX              = 0.3
DT_MAX               = 0.0001
VORTICITY_TAGGING    = TRUE
TAG_BUFFER           = 2
REGRID_CFL_INTERVAL  = 0.5
OUTPUT_U             = TRUE
OUTPUT_P             = TRUE
OUTPUT_F             = TRUE
OUTPUT_OMEGA         = TRUE
OUTPUT_DIV_U         = TRUE
ENABLE_LOGGING       = TRUE

