include $(top_srcdir)/config/Make-rules

EXTRA_PROGRAMS = type_conversion_01_2d type_conversion_01_3d

type_conversion_01_2d_CXXFLAGS = $(AM_CXXFLAGS) -DNDIM=2
type_conversion_01_2d_LDADD = $(IBAMR_LDFLAGS) $(IBAMR2d_LIBS) $(IBAMR_LIBS)
type_conversion_01_2d_SOURCES = type_conversion_01.cpp

type_conversion_01_3d_CXXFLAGS = $(AM_CXXFLAGS) -DNDIM=3
type_conversion_01_3d_LDADD = $(IBAMR_LDFLAGS) $(IBAMR3d_LIBS) $(IBAMR_LIBS)
type_conversion_01_3d_SOURCES = type_conversion_01.cpp

tests: $(EXTRA_PROGRAMS)
	if test "$(top_srcdir)" != "$(top_builddir)" ; then \
	  ln -f -s $(srcdir)/*input $(PWD) ; \
	  ln -f -s $(srcdir)/*output $(PWD) ; \
	fi ;
.PHONY: tests
