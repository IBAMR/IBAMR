// check DOF numberings with one periodic direction

depth = 1
var_type = "CELL"
ghost_width = 1

Main {
   log_file_name = "output"
   log_all_nodes = FALSE
   timer_enabled = TRUE
}

N = 4

CartesianGeometry {
   domain_boxes       = [(0, 0), (N - 1, N - 1)]
   x_lo               = 0, 0
   x_up               = 1, 1
   periodic_dimension = 1, 0
}

GriddingAlgorithm {
   max_levels = 1
   ratio_to_coarser    {level_1 =   4,   4}
   largest_patch_size  {level_0 =   2,   4}
   smallest_patch_size {level_0 =   2,   4}

   efficiency_tolerance = 0.70e0  
   combine_efficiency   = 0.85e0 
}

StandardTagAndInitialize {
   tagging_method = "REFINE_BOXES"
   RefineBoxes {
      level_0 = [(N/4 ,N/4), (N/2 - 1, N/2 - 1)],
                [(N/2, N/4), (N - 1,   N/2 - 1)],
                [(N/4, N/2), (N/2 - 1, 3*N/4 - 1)]
      level_1 = [( 5*N/4 , 5*N/4 ), (15*N/4 - 1, 7*N/4 - 1 )]

   }
}

LoadBalancer {
   bin_pack_method = "SPATIAL"
   max_workload_factor = 1
}
